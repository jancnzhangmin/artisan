<%= render 'layerbegin' %>
<div class="page-content">
  <div class="page-header">
    <h1>
      最终用户协议
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@eula,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
          <h3 class="header smaller lighter blue">

            <small></small>
          </h3>
          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 标题 </label>
            <div class="col-sm-9">
              <%= f.text_field :tile,class:"col-xs-10 col-sm-5" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 协议正文 </label>
            <div class="col-sm-9">
              <%= f.kindeditor :eula,class:"col-xs-10 col-sm-5" %>
            </div>
          </div>

          <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
              <button type="submit" name="commit" value="保存" class="btn btn-info" data-disable-with="保存" id="submit">
                <i class="icon-ok bigger-110"></i>
                保存
              </button>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'layerend' %>