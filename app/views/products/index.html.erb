<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      型号
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">型号</th>
                <th class="text-center">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @products.each do |product| %>
                  <tr>
                    <td>
                      <%= product.product %>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-success" href=<%= edit_product_path(product) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          编辑
                        </a>
                        <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-info" href=<%= product_path(product) %>>
                          <i class="fa fa-trash bigger-120"></i>
                          删除
                        </a>
                      </div>

                    </td>
                  </tr>
              <% end %>
              </tbody>
              </table>
            </div>
          </div>
        </div>

              <div class="clearfix form-actions">
                <div class="col-md-12 text-right">
                  <a class="btn btn-info" href=<%= new_product_path %>>
                    <i class="fa fa-plus bigger-110"></i>
                    新增
                  </a>
                </div>
              </div>

              <div data-turbolinks="false" class="text-center">
                <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
              </div>

<%= render 'layerend' %>