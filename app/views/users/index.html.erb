<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      型号
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">头像</th>
                <th class="text-center">openid</th>
                <th class="text-center">账号</th>
                <th class="text-center">省</th>
                <th class="text-center">市</th>
                <th class="text-center">区/县</th>
                <th class="text-center">我推荐的用户</th>
                <th class="text-center">我推荐的技工</th>
              </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
                  <tr>
                    <td>
                      <img width="20px" src=<%=user.headurl %>>
                    </td>
                    <td>
                      <%= user.openid %>
                    </td>
                    <td>
                      <%= user.login %>
                    </td>
                    <td>
                      <%= user.province %>
                    </td>
                    <td>
                      <%= user.city %>
                    </td>
                    <td>
                      <%= user.district %>
                    </td>
                    <td>
                      <%= user.childrens.count %>
                    </td>
                    <td>
                      <%= user.artisanusers.count %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>


      <div data-turbolinks="false" class="text-center">
        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
      </div>

<%= render 'layerend' %>