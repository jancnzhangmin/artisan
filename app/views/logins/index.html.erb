<style>
  .back-img{
      background:-moz-linear-gradient(top,#b8c4cb,#f6f6f8);/*火狐*/
      background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(#b8c4cb), to(#f6f6f8));/*谷歌*/
      background:linear-gradient(top,#b8c4cb,#f6f6f8);

  }
</style>

<script>
    $(document).ready(function(){
        $('#rucapimg').click(function(){
            var src = this.src;
            this.src=src;
        });
    });

</script>

<body class="login-layout">
<div class="main-container">
  <div class="main-content">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="login-container">
          <div class="center">

          </div>

          <div class="space-6"></div>

          <div class="position-relative">
            <div id="login-box" class="login-box visible widget-box no-border" style="margin-top: 200px;">
              <div class="widget-body">
                <div class="widget-main">
                  <h4 class="header blue lighter bigger">
                    <i class="icon-coffee green"></i>
                    刘叔叔安装平台
                  </h4>

                  <div class="space-6"></div>

                  <%= form_for(:login, url: logins_path,remote: true,:html => {:class=>'form form-horizontal'}) do |f| %>
                    <fieldset>
                      <label class="block clearfix">
														<span class="block input-icon input-icon-right">
                                                          <%= f.text_field :login ,class:"form-control",placeholder:"用户名"%>
															<i class="icon-user"></i>
														</span>
                      </label>

                      <label class="block clearfix">
														<span class="block input-icon input-icon-right">
                                                          <%= f.password_field :password ,class:"form-control",placeholder:"密码" %>
															<i class="icon-lock"></i>
														</span>
                      </label>



                      <label class="block clearfix">
														<span class="block input-icon input-icon-right">
<table width="100%">
  <tr>
    <td width="70%">
      <%= rucaptcha_input_tag(class: 'form-control', placeholder: '输入验证码',id:'rucaptchainput') %>
    </td>
    <td width="30%" align="right">
      <%= rucaptcha_image_tag('height':'35',id:'rucapimg') %>
    </td>
  </tr>

</table>
														</span>
                      </label>

                      <div class="space"></div>
                      <div class="alert alert-danger" id="messagediv" style="padding: 5px; display: none;">
                        <strong>
                          <i class="icon-warning-sign"></i>
                        </strong>
                        <span id="messagespan"></span>
                        <br />
                      </div>

                      <div class="clearfix">
                        <label class="inline">

                        </label>

                        <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                          <i class="icon-key"></i>
                          登录
                        </button>
                      </div>

                      <div class="space-4"></div>
                    </fieldset>
                  <% end %>

                  <div class="social-or-login center">
                    <span class="bigger-110"></span>
                  </div>

                  <div class="social-login center">
  <img src='images/logo.png' width="50%">
                  </div>
                </div><!-- /widget-main -->

                <div class="toolbar clearfix">
                  <div></div>


                  <div class="text-right">
                    <span style="color: #2671b9;">昆明刘叔叔科技有限公司&nbsp;&nbsp;</span>

                  </div>
                </div>
              </div><!-- /widget-body -->
            </div><!-- /login-box -->

          </div><!-- /position-relative -->
        </div>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div>
</div><!-- /.main-container -->
</body>

<script type="text/javascript">
    function show_box(id) {
        jQuery('.widget-box.visible').removeClass('visible');
        jQuery('#'+id).addClass('visible');
    }
</script>
